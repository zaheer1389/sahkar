<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20.0" style="-fx-background-color: #f1f3f5; -fx-padding: 25;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.ManageUserController">
    <children>
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6;" prefWidth="380.0">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="User Registration" />
                <Separator />
                
                <VBox spacing="5.0">
                    <Label text="Link to Member (Search by Member No.)" />
                    <HBox spacing="10">
                        <TextField fx:id="txtMemberSearch" prefHeight="35.0" HBox.hgrow="ALWAYS" promptText="Enter Member No." />
                        <Button onAction="#handleFetchMember" text="Fetch" prefHeight="35.0" />
                    </HBox>
                    <Label fx:id="lblMemberDetails" text="No member linked" style="-fx-text-fill: #27ae60; -fx-font-size: 11;" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Username" />
                    <TextField fx:id="txtUsername" prefHeight="35.0" promptText="Login ID" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Password" />
                    <PasswordField fx:id="txtPassword" prefHeight="35.0" promptText="New password" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="System Role" />
                    <ComboBox fx:id="cmbRole" maxWidth="Infinity" prefHeight="35.0" />
                </VBox>

                <Region VBox.vgrow="NEVER" />

                <HBox spacing="10.0">
                    <children>
                        <Button onAction="#handleClear" prefHeight="40.0" prefWidth="100.0" text="Clear" />
                        <Button fx:id="btnSave" onAction="#handleSave" prefHeight="40.0" prefWidth="180.0"
                                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="CREATE ACCOUNT" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="15.0" HBox.hgrow="ALWAYS">
            <children>
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="System Access Control" />
                <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS" styleClass="compact-table">
                    <columns>
                        <TableColumn fx:id="colMemberNo" text="Memb. No" prefWidth="100" />
                        <TableColumn fx:id="colMemberName" text="Member Name" prefWidth="220" />
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="150" />
                        <TableColumn fx:id="colRole" text="Role" prefWidth="120" />
                        <TableColumn fx:id="colStatus" text="Actions" prefWidth="100" />
                        <TableColumn fx:id="colAction" text="Actions" prefWidth="100" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</HBox>