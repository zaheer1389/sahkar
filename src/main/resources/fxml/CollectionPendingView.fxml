<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.CollectionPendingController">
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Pending Payment List for current month" />
        <TextField fx:id="txtSearchPending" prefWidth="250.0" promptText="Search Name or Member #..." />
        <Button onAction="#refreshPendingList" text="Refresh List" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        <Button onAction="#handleExportPdf" text="Export PDF" 
        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>
    <TableView fx:id="tblPending" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colMemberNo" text="Member #" prefWidth="100" />
            <TableColumn fx:id="colName" text="Member Name" prefWidth="300" />
            <TableColumn fx:id="colEmiAmount" text="Emi Amount" prefWidth="200" />
            <TableColumn fx:id="colFeesAmoount" text="Fees Amount" prefWidth="200" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="30.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6;">
    <children>
    		<VBox alignment="CENTER_RIGHT">
	            <Label text="Only FEES" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
	            <Label fx:id="lblFeesCount" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
	        </VBox>
	        <Separator orientation="VERTICAL" prefHeight="40.0" />
	        <VBox alignment="CENTER_RIGHT">
	            <Label text="100 EMI" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
	            <Label fx:id="lbl100EmiCount" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
	        </VBox>
	        <Separator orientation="VERTICAL" prefHeight="40.0" />
	        <VBox alignment="CENTER_RIGHT">
	            <Label text="200 EMI" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
	            <Label fx:id="lbl200EmiCount" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
	        </VBox>
	        <Separator orientation="VERTICAL" prefHeight="40.0" />
	        <VBox alignment="CENTER_RIGHT">
	            <Label text="300 EMI" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
	            <Label fx:id="lbl300EmiCount" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
	        </VBox>
	        <Separator orientation="VERTICAL" prefHeight="40.0" />
	        <VBox alignment="CENTER_RIGHT">
	            <Label text="400 EMI" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
	            <Label fx:id="lbl400EmiCount" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
	        </VBox>
	        <Separator orientation="VERTICAL" prefHeight="40.0" />
    	<VBox alignment="CENTER_RIGHT">
            <Label text="TOTAL PENDING PAYMENTS" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
            <Label fx:id="lblTotalPendingPayments" text="₹ 0" style="-fx-text-fill: #27ae60; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="40.0" />
        <VBox alignment="CENTER_RIGHT">
            <Label text="TOTAL MONTHLY FEES" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
            <Label fx:id="lblTotalFees" text="₹ 0" style="-fx-text-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="40.0" />
        <VBox alignment="CENTER_RIGHT">
            <Label text="TOTAL EMI PAYMENTS" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
            <Label fx:id="lblTotalEmi" text="₹ 0" style="-fx-text-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="40.0" />
        <VBox alignment="CENTER_RIGHT">
            <Label text="GRAND TOTAL" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-font-weight: bold;" />
            <Label fx:id="lblGrandTotal" text="₹ 0" style="-fx-text-fill: #e74c3c; -fx-font-size: 24; -fx-font-weight: bold;" />
        </VBox>
    </children>
</HBox>
</VBox>