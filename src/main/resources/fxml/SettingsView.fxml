                                                <Label text="Cut-off Time (Daily):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                    <children>
                                                        <ComboBox fx:id="cbRemarkHour" prefHeight="35.0" prefWidth="75.0" />
                                                        <Label style="-fx-font-weight: bold;" text=":" />
                                                        <ComboBox fx:id="cbRemarkMinute" prefHeight="35.0" prefWidth="75.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </GridPane>
                                        <Label style="-fx-font-style: italic; -fx-text-fill: #95a5a6; -fx-font-size: 11px;" text="* If enabled, remarks are generated for payments after this threshold." wrapText="true" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #673ab7;" text="ðŸ–¨ POS Printer Settings" />
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="Select Default POS Printer" />
                                        <HBox spacing="10.0">
                                            <children>
                                                <ComboBox fx:id="cbPrinters" prefHeight="35.0" promptText="Detecting Printers..." HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                                                <Button onAction="#handleRefreshPrinters" prefHeight="35.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" text="ðŸ”„" />
