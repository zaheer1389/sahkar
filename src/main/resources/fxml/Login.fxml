<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" 
           style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #000000);" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.badargadh.sahkar.controller.LoginController">
    
    <Circle radius="150" fill="white" opacity="0.03" translateX="-350" translateY="-200"/>
    <Circle radius="100" fill="#27ae60" opacity="0.05" translateX="380" translateY="220"/>

    <VBox alignment="CENTER" spacing="30.0" maxWidth="500" maxHeight="580"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 20, 0, 0, 10);">
        
        <padding>
            <Insets bottom="10.0" left="60.0" right="60.0" top="10.0"/>
        </padding>

        <VBox alignment="CENTER" spacing="10">
		    <ImageView fitHeight="170.0" fitWidth="170.0" preserveRatio="true">
		        <Image url="@../static/images/logo.png" />
		    </ImageView>
		    <Label text="LOGIN TO ACCESS" style="-fx-font-size: 26; -fx-font-weight: 900; -fx-text-fill: #2c3e50; -fx-letter-spacing: 3;"/>
		    <HBox alignment="CENTER" spacing="5">
		        <Separator prefWidth="60" style="-fx-opacity: 0.7; -fx-border-width: 2;"/>
		        <Label text="Sahkar ROSCA" style="-fx-text-fill: #34495e; -fx-font-size: 14; -fx-font-weight: 900;"/>
		        <Separator prefWidth="60" style="-fx-opacity: 0.7; -fx-border-width: 2;"/>
		    </HBox>
		</VBox>

        <VBox spacing="20">
		    <VBox spacing="8">
		        <Label text="USERNAME" style="-fx-font-size: 11; -fx-font-weight: 900; -fx-text-fill: #2c3e50;"/>
		        <StackPane alignment="CENTER_RIGHT">
		            <TextField fx:id="txtUsername" promptText="Enter your username" 
		                       style="-fx-pref-height: 55; -fx-padding: 0 45 0 15; -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 15;"/>
		            
		            <Button onAction="#clearUsername" focusTraversable="false" styleClass="field-icon-btn" style="-fx-background-color: transparent; -fx-cursor: hand;">
		                <graphic>
		                    <de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView glyphName="TIMES_CIRCLE" size="22" fill="#a4b0be"/>
		                </graphic>
		            </Button>
		        </StackPane>
		    </VBox>
		    
		    <VBox spacing="8">
		        <Label text="PASSWORD" style="-fx-font-size: 11; -fx-font-weight: 900; -fx-text-fill: #2c3e50;"/>
		        <StackPane alignment="CENTER_RIGHT">
		            <PasswordField fx:id="txtPassword" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" 
		                           style="-fx-pref-height: 55; -fx-padding: 0 85 0 15; -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 15;"/>
		            
		            <TextField fx:id="txtPasswordVisible" visible="false" managed="false" 
		                       style="-fx-pref-height: 55; -fx-padding: 0 85 0 15; -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 15;"/>
		
		            <Button onAction="#togglePassword" focusTraversable="false" styleClass="field-icon-btn" style="-fx-background-color: transparent; -fx-cursor: hand;">
		                    <graphic>
		                        <de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView focusTraversable="false" fx:id="eyeIcon" glyphName="EYE" size="20" fill="#2c3e50"/>
		                    </graphic>
		                </Button>
		        </StackPane>
		    </VBox>
		</VBox>
		
		<VBox spacing="15" alignment="CENTER">
		    <Button fx:id="btnLogin" text="ðŸ”“ SECURE LOGIN" onAction="#handleLogin" defaultButton="true"
		            maxWidth="Infinity" prefHeight="50" styleClass="login-button"
		            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 8; -fx-cursor: hand;"/>
		    
		    <Button fx:id="btnReset" text="ðŸ”„ RESET FIELDS" onAction="#handleReset"
		            maxWidth="Infinity" prefHeight="40" styleClass="reset-button"
		            style="-fx-background-color: #f1f2f6; -fx-text-fill: #2f3542; -fx-font-weight: bold; -fx-font-size: 12; -fx-background-radius: 8; -fx-cursor: hand;"/>
		            
		    <Label fx:id="lblMessage" style="-fx-font-size: 12; -fx-font-weight: bold;" textFill="#e74c3c" />
		</VBox>

    </VBox>
</StackPane>