<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox prefWidth="800.0" spacing="15.0" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-background-radius: 5;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.MemberRemarkController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <VBox spacing="2">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="PAYMENT DISCIPLINARY LOG" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Track late payment remarks and penalty depletion status" />
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                
                <HBox alignment="CENTER" spacing="8" style="-fx-background-color: #fdf2f2; -fx-padding: 8 15; -fx-background-radius: 20; -fx-border-color: #f8d7da; -fx-border-radius: 20;">
                    <children>
                        <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" text="ACTIVE REMARKS:" />
                        <Label fx:id="lblActiveCount" style="-fx-text-fill: #e74c3c; -fx-font-size: 16px; -fx-font-weight: bold;" text="0" />
                    </children>
                </HBox>
            </children>
        </HBox>

        <TableView fx:id="tblRemarks" prefHeight="400.0" prefWidth="760.0" styleClass="disciplinary-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMonth" prefWidth="140.0" text="Financial Month" />
                <TableColumn fx:id="colIssued" prefWidth="180.0" text="Late Record Timestamp" />
                <TableColumn fx:id="colType" prefWidth="120.0" text="Penalty Type" />
                <TableColumn fx:id="colStatus" prefWidth="140.0" text="Current Status" />
                <TableColumn fx:id="colClearedAction" prefWidth="175.0" text="Resolution Detail" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <children>
                <Label style="-fx-font-style: italic; -fx-text-fill: #95a5a6; -fx-font-size: 11px;" text="* Remarks are automatically cleared via Loan Application attempts or Final Refunds." />
            </children>
        </HBox>
    </children>
</VBox>