<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f8fafc;"
	xmlns="http://javafx.com/javafx/17"
	xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.badargadh.sahkar.controller.LoanHistoryController"
            stylesheets="@/static/css/style.css">
	<children>
		<VBox spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<VBox prefWidth="800.0" spacing="15.0" style="-fx-background-color: #F9F8F6; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-background-radius: 5;">
					<padding>
						<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
					</padding>
					<children>
						<HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 15 0;">
						    <children>
						        <VBox style="-fx-border-color: transparent transparent transparent #005461; -fx-border-width: 0 0 0 5; -fx-padding: 0 0 0 15;">
						            <children>
						                <Label text="મેમ્બર ના લોન એકાઉન્ટસ" 
						                       style="-fx-font-size: 24; -fx-font-weight: 900; -fx-text-fill: #005461;" />
						                <Label text="Loan history and disciplinary audit log" 
						                       style="-fx-font-size: 12; -fx-text-fill: #64748b;" />
						            </children>
						        </VBox>
						        <Region HBox.hgrow="ALWAYS" />
						        <Button text="પ્રિન્ટ રીપોર્ટ" 
						                style="-fx-background-color: #005461; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 20;" />
						    </children>
						</HBox>
						<VBox VBox.vgrow="ALWAYS" styleClass="table-container-shadow" 
								style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 5);">
							<children>
								<TableView fx:id="tblLoanHistory" VBox.vgrow="ALWAYS" styleClass="compact-table">
								    <columns>
								        <TableColumn fx:id="colDate" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" text="તારીખ" />
								        <TableColumn fx:id="colAmount" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" text="રકમ" />
								        <TableColumn fx:id="colStatus" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" text="સ્ટેટ્સ" />
								        <TableColumn fx:id="colType" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" text="લોન લેનાર" />
								        
								        <TableColumn fx:id="colWitnessName" prefWidth="150.0" text="જામીન નું નામ" />
								        <TableColumn fx:id="colAuthorityName" prefWidth="150.0" text="ઓથોરીટી નું નામ" />
								    </columns>
								    <columnResizePolicy>
								        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
								    </columnResizePolicy>
								</TableView>
							</children>
						</VBox>
					</children>
				</VBox>
			</children>
		</VBox>
	</children>
</AnchorPane>