<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" alignment="CENTER" prefWidth="350.0" 
      style="-fx-background-color: white; -fx-border-color: #2c3e50; -fx-border-width: 2; -fx-background-radius: 5; -fx-border-radius: 5;" 
      xmlns="http://javafx.com/javafx/10" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.badargadh.sahkar.controller.SecurityPasswordController">
    <padding>
        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
    </padding>
    <children>
        <Label text="USER AUTHORIZATION" style="-fx-font-weight: bold; -fx-text-fill: #c0392b;">
            <font><Font size="16.0" /></font>
        </Label>
        
        <Label fx:id="lblActionName" text="Action: Loan Disbursement" textAlignment="CENTER" wrapText="true" 
               style="-fx-text-fill: #34495e; -fx-font-style: italic;" />
        
        <TextField fx:id="txtUsername" editable="false" prefHeight="40.0" 
                       promptText="Username" style="-fx-alignment: center; -fx-font-size: 14;" />
                       
        <PasswordField fx:id="txtPassword" onAction="#handleConfirm" prefHeight="40.0" 
                       promptText="Enter Password" style="-fx-alignment: center; -fx-font-size: 14;" />
        
        <HBox spacing="15.0" alignment="CENTER">
            <children>
                <Button onAction="#handleCancel" prefHeight="35.0" prefWidth="90.0" text="Cancel" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;" />
                <Button onAction="#handleConfirm" prefHeight="35.0" prefWidth="120.0" text="VERIFY" 
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
            </children>
        </HBox>
    </children>
</VBox>