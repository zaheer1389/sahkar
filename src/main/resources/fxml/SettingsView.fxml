                                        <Spinner fx:id="spnCoolingPeriod" disable="true" editable="true" maxWidth="Infinity" prefHeight="35.0" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnEditCooling" onAction="#toggleCoolingEdit" prefHeight="35.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" text="âœŽ"  />
                                    </HBox>
                                </VBox>
                            </children>
                        </VBox>
                        
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="ðŸ’° Configured EMI Amounts" />
                                <VBox spacing="5.0">
								    <TableView fx:id="tblEmiAmounts" fixedCellSize="35.0" prefHeight="180.0" maxWidth="320.0" style="-fx-background-radius: 4; -fx-border-color: #dee2e6;">
								        <columns>
								            <TableColumn fx:id="colEmiValue" maxWidth="100.0" text="Amount (â‚¹)" />
								            <TableColumn fx:id="colEmiStatus" maxWidth="100.0" text="Status" />
								            <TableColumn fx:id="colEmiAction" maxWidth="100.0" text="Action" />
								        </columns>
								        <columnResizePolicy>
								            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
								        </columnResizePolicy>
								    </TableView>
								    <HBox spacing="10.0">
								        <TextField fx:id="txtNewEmiValue" onAction="#handleAddEmi" prefHeight="35.0" prefWidth="180.0" promptText="Enter Amount (Multiple of 100)" />
								        <Button onAction="#handleAddEmi" prefHeight="35.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="+ ADD" />
								    </HBox>
								</VBox>
                            </children>
                        </VBox>

                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6;" GridPane.columnIndex="0" GridPane.rowIndex="1">
