<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="20.0" style="-fx-background-color: #f1f3f5;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.MonthlyExpenseController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <VBox spacing="15.0" minWidth="300" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #dee2e6;">
        <Label text="Log Monthly Expense" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Separator />

        <Label text="Category" style="-fx-font-weight: bold;" />
		<ComboBox fx:id="cmbCategory" maxWidth="Infinity" promptText="Select Category" />

		<Label text="Type" style="-fx-font-weight: bold;" />
		<ComboBox fx:id="cmbType" maxWidth="Infinity" promptText="Select Type" />

        <Label text="Category" style="-fx-font-weight: bold;" />

        <Label text="Amount" style="-fx-font-weight: bold;" />
        <TextField fx:id="txtAmount" promptText="â‚¹ 0.00" />

        <Label text="Remarks" style="-fx-font-weight: bold;" />
        <TextArea fx:id="txtRemarks" prefHeight="60" promptText="Optional notes..." />

        <HBox spacing="10" HBox.hgrow="ALWAYS">
            <Button onAction="#handleSaveExpense" text="SAVE ENTRY" maxWidth="Infinity" prefHeight="40"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
            <Button onAction="#handleResetForm" text="RESET FORM" maxWidth="Infinity" prefHeight="40"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <VBox spacing="10.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #dee2e6;">
        <HBox alignment="BOTTOM_LEFT" spacing="15.0">
            <VBox spacing="2" alignment="BOTTOM_LEFT">
                <Label text="Search Expense" style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <TextField fx:id="txtSearch" promptText="ðŸ” search text..."
                           prefWidth="180" prefHeight="35" style="-fx-font-size: 12;"/>
            </VBox>

            <VBox spacing="2" alignment="BOTTOM_LEFT">
                <Label text="Expense Month" style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <ComboBox fx:id="cmbMonths" prefWidth="150" prefHeight="35" promptText="Select Month"/>
            </VBox>

            <VBox spacing="2" alignment="BOTTOM_LEFT">
                <Label text="Category" style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <ComboBox fx:id="cmbCategoryFilter" prefWidth="130" prefHeight="35" promptText="All Categories"/>
            </VBox>

            <VBox alignment="BOTTOM_LEFT">
                <Button text="âœ– Reset" onAction="#handleResetFilters" prefHeight="35"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="BOTTOM_RIGHT" spacing="10">
                <HBox spacing="15" alignment="CENTER_LEFT" prefHeight="35" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-padding: 10;">
                    <VBox alignment="CENTER_LEFT">
                        <Label text="JAMAT BALANCE" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="lblJamatBalance" text="â‚¹ 0.00" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    </VBox>
                    <Separator orientation="VERTICAL"/>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="OFFICE EXPENSE BALANCE" style="-fx-font-size: 10; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="lblOfficeBalance" text="â‚¹ 0.00" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                    </VBox>
                </HBox>
            </HBox>
        </HBox>
        <TableView fx:id="tblExpenses" VBox.vgrow="ALWAYS" styleClass="compact-table">
            <columns>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100" />
                <TableColumn fx:id="colType" text="Type"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="150" />
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="100" />
                <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="200" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </VBox>
</HBox>