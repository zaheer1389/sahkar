                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <TextField fx:id="txtRefundCooling" disable="true" prefHeight="35.0" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnEditRefundCooling" onAction="#toggleRefundCoolingEdit" prefHeight="35.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" text="âœŽ"  />
                                    </HBox>
                                </VBox>
                            </children>
                        </VBox>

                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="ðŸ’° Loan Policy Settings" />
                                <VBox spacing="5.0">
                                    <Label text="Minimum Membership Period (Months)" />
