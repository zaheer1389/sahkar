<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #f1f3f5;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.SettingsController">
    <content>
        <VBox spacing="20.0" style="-fx-padding: 25;">
            <children>
                <VBox>
	            	<HBox alignment="CENTER_LEFT" spacing="15.0">
