                                <VBox fx:id="vboxRemarkFields" disable="true" spacing="15.0">
                                    <children>
                                        <CheckBox fx:id="chkAutoRemark" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Enable Automatic Remarks" />
                                        <Separator />
                                        <GridPane hgap="10.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="150.0" />
                                                <ColumnConstraints hgrow="ALWAYS" />
                                            </columnConstraints>
                                            <children>
                                                <Label text="Cut-off Date (of Month):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
