<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
    name="MemberSummary" columnCount="2" columnSpacing="15" 
    pageWidth="595" pageHeight="842" columnWidth="270" 
    leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="30">
    
    <property name="net.sf.jasperreports.default.font.name" value="Noto Sans Gujarati"/>

	<parameter name="LegendDataSource" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>
	<parameter name="LegendSubreport" class="net.sf.jasperreports.engine.JasperReport"/>

    <field name="memberNo" class="java.lang.Integer"/>
    <field name="gujaratiName" class="java.lang.String"/>
    <field name="rowColor" class="java.lang.String"/> 
    <field name="accentColor" class="java.lang.String"/> 
    <title>
	    <band height="400">
	        <subreport>
	            <reportElement x="27" y="60" width="500" height="200"/>
	            <dataSourceExpression><![CDATA[$P{LegendDataSource}]]></dataSourceExpression>
	            <subreportExpression><![CDATA[$P{LegendSubreport}]]></subreportExpression>
	        </subreport>
	        
	        <break>
	            <reportElement x="0" y="390" width="100" height="1"/>
	        </break>
	    </band>
	</title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="40" height="20" forecolor="#FFFFFF" backcolor="#2C3E50"/>
                <box><pen lineWidth="0.5" lineColor="#000000"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Noto Sans Gujarati" size="9" isBold="true" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[સભ્ય નં]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="40" y="0" width="230" height="20" forecolor="#FFFFFF" backcolor="#2C3E50"/>
                <box><pen lineWidth="0.5" lineColor="#000000"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Noto Sans Gujarati" size="9" isBold="true" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[સભ્યનું નામ (Member Name)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="18" splitType="Stretch">
            <textField>
                <reportElement mode="Opaque" x="0" y="0" width="40" height="18" forecolor="#000000">
                    <propertyExpression name="net.sf.jasperreports.style.backcolor"><![CDATA[$F{accentColor}]]></propertyExpression>
                </reportElement>
                <box><pen lineWidth="0.5" lineColor="#BDC3C7"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Noto Sans Gujarati" size="9" isBold="true" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{memberNo} != null ? $F{memberNo} : ""]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement mode="Opaque" x="40" y="0" width="230" height="18" forecolor="#000000">
                    <propertyExpression name="net.sf.jasperreports.style.backcolor"><![CDATA[$F{rowColor}]]></propertyExpression>
                </reportElement>
                <box><pen lineWidth="0.5" lineColor="#BDC3C7"/></box>
                <textElement verticalAlignment="Middle">
                    <font fontName="Noto Sans Gujarati" size="9" isBold="false" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{gujaratiName}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <textField pattern="dd-MM-yyyy HH:mm">
                <reportElement x="0" y="7" width="150" height="20" forecolor="#95A5A6"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="false" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="355" y="7" width="200" height="20" forecolor="#95A5A6"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="false" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["પાનું " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>