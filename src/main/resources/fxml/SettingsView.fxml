                                        <Button fx:id="btnEditMonthly" onAction="#toggleMonthlyEdit" prefHeight="35.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" text="âœŽ"  />
                                    </HBox>
                                </VBox>
                                <VBox spacing="5.0">
                                    <Label text="New Member Fees" />
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <TextField fx:id="txtNewMemberFees" disable="true" prefHeight="35.0" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnEditNewMember" onAction="#toggleNewMemberEdit" prefHeight="35.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" text="âœŽ"  />
