<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" prefWidth="750.0" style="-fx-background-color: #f4f7f9;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.badargadh.sahkar.controller.LoanDisbursementController">
    <padding><Insets bottom="20" left="25" right="25" top="20" /></padding>
    <children>
        <HBox spacing="25.0" style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-background-radius: 8;">
    <children>
        <VBox spacing="2">
            <Label text="PRIMARY MEMBER" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
            <Label fx:id="lblHeaderMemberName" text="Loading..." style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
        </VBox>
        
        <Separator orientation="VERTICAL" style="-fx-opacity: 0.3;" />
        
        <VBox spacing="2">
            <Label text="MEMBER NUMBER" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
            <Label fx:id="lblHeaderMemberNo" text="-" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
        </VBox>

        <Separator orientation="VERTICAL" style="-fx-opacity: 0.3;" />

        <VBox spacing="2" HBox.hgrow="ALWAYS">
            <Label text="DISBURSEMENT AMOUNT" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
            <Label fx:id="lblHeaderAmount" text="₹ 0.00" style="-fx-text-fill: #2ecc71; -fx-font-size: 18; -fx-font-weight: bold;" />
        </VBox>
        
        
    </children>
</HBox>

<HBox spacing="15.0" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 0 0 8 8;">
            <children>
                <VBox spacing="2" prefWidth="180">
                    <Label text="FEES DEDUCTION" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
                    <Label fx:id="lblFeesDeductionAmt" text="₹ 0.00" style="-fx-text-fill: #e67e22; -fx-font-size: 16; -fx-font-weight: bold;" />
                </VBox>
                
                <Separator orientation="VERTICAL" style="-fx-opacity: 0.3;" />

                <VBox spacing="2" prefWidth="180">
                    <Label text="PREVIOUS LOAN PENDING" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
                    <Label fx:id="lblPrevLoanDeduction" text="₹ 0.00" style="-fx-text-fill: #e74c3c; -fx-font-size: 16; -fx-font-weight: bold;" />
                </VBox>

                <Separator orientation="VERTICAL" style="-fx-opacity: 0.3;" />

                <VBox spacing="2" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Label text="NET CASH PAYABLE" style="-fx-text-fill: #bdc3c7; -fx-font-size: 10; -fx-font-weight: bold;" />
                    <Label fx:id="lblNetPayable" text="₹ 0.00" style="-fx-text-fill: #2ecc71; -fx-font-size: 22; -fx-font-weight: bold;" />
                </VBox>
            </children>
        </HBox>

        <HBox spacing="20">
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-background-radius: 5;">
                    <Label text="WITNESS DETAILS" style="-fx-font-weight: bold;" />
                    <TextField fx:id="txtWitness1" promptText="Witness 1 Member No." onKeyReleased="#handleWitness1Fetch" />
                    <Label fx:id="lblWitness1Name" text="Name: -" style="-fx-font-weight:bold;-fx-font-size: 11; -fx-text-fill: #27ae60;" />
                    <TextField fx:id="txtWitness2" promptText="Witness 2 Member No." onKeyReleased="#handleWitness2Fetch" />
                    <Label fx:id="lblWitness2Name" text="Name: -" style="-fx-font-weight:bold;-fx-font-size: 11; -fx-text-fill: #27ae60;" />
                </VBox>

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-background-radius: 5;">
                    <Label text="COLLECTION METHOD" style="-fx-font-weight: bold; -fx-text-fill: #e67e22;" />
                    <HBox spacing="20">
                        <RadioButton fx:id="rbSelf" text="Member Self" selected="true" onAction="#toggleCollectionUI">
                            <toggleGroup><ToggleGroup fx:id="tgCollection" /></toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rbRelative" text="Authority" toggleGroup="$tgCollection" onAction="#toggleCollectionUI" />
                    </HBox>
                    
                    <VBox fx:id="vboxRelative" spacing="5" visible="false" managed="false">
                        <!--<TextField fx:id="txtReceiverNo" promptText="Relative Member No." onKeyReleased="#handleReceiverFetch" />
                        <Label fx:id="lblReceiverName" text="Name: -" style="-fx-font-size: 11; -fx-text-fill: #e67e22;" />-->
                        <TextField fx:id="txtRemarks" promptText="Relation (e.g. Wife, Son)" />
                    </VBox>
                </VBox>
            </VBox>

            <!--<VBox spacing="10" prefWidth="200" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="MEDIA VERIFICATION" style="-fx-font-weight: bold;" />
                <GridPane hgap="10" vgap="10">
                    <Button text="W1 Photo" fx:id="btnW1Photo" onAction="#handleCapture" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="80" prefHeight="60" />
                    <Button text="W1 Sign" fx:id="btnW1Sign" onAction="#handleCapture" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="80" prefHeight="60" />
                    <Button text="W2 Photo" fx:id="btnW2Photo" onAction="#handleCapture" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="80" prefHeight="60" />
                    <Button text="W2 Sign" fx:id="btnW2Sign" onAction="#handleCapture" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="80" prefHeight="60" />
                </GridPane>
            </VBox>-->
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="✖ CANCEL" onAction="#handleCancel" 
            		style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="220" prefHeight="40" />
            <Button text="✅ CONFIRM DISBURSEMENT" fx:id="btnConfirm" onAction="#handleDisburse" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="220" prefHeight="40" />
        </HBox>
    </children>
</VBox>